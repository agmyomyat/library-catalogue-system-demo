{
  "name": "nestjs-nextjs-mvc-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "nest": "nest",
    "next": "cd src/client && next",
    "prebuild": "rimraf dist",
    "build": "NODE_ENV=production nest build && cd src/client && next build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "start:debug": "nest start --debug --watch --preserveWatchOutput",
    "start:prod": "NODE_ENV=production node dist/src/server/main",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx}\"",
    "test": "jest --setupFiles dotenv-flow/config --collect-coverage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:request": "jest --setupFiles dotenv-flow/config --config ./test/jest-request.json"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.1",
    "@nestjs/common": "^9.1.6",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^9.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^9.4.3",
    "commander": "^13.1.0",
    "cookie-parser": "^1.4.7",
    "nestjs-console": "^10.0.0",
    "nanoid": "5.1.5",
    "@prisma/client": "6.8.2",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "ts-morph": "^25.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^9.2.1",
    "prisma": "^6.8.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/jest": "^28.1.8",
    "@types/node": "^22.15.18",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "dotenv-flow": "^4.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "fishery": "^2.3.1",
    "jest": "^28.1.3",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^5.8.3"
  }
}
